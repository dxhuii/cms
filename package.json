{
  "name": "cms",
  "type": "module",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": "22.20.0"
  },
  "scripts": {
    "build": "nr -r build",
    "dev": "nr -r dev",
    "lint": "oxfmt --no-error-on-unmatched-pattern && oxlint --type-aware .",
    "prepublishOnly": "nr build",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "release": "bumpp -r && pnpm -r publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "lint:fix": "oxfmt --no-error-on-unmatched-pattern && oxlint --type-aware --fix"
  },
  "devDependencies": {
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "lint-staged": "catalog:",
    "markdown-it-mathjax3": "catalog:",
    "pkg-placeholder": "workspace:*",
    "pnpm": "catalog:",
    "sass-embedded": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,json}": [
      "oxfmt --no-error-on-unmatched-pattern",
      "oxlint --type-aware --fix"
    ]
  }
}
